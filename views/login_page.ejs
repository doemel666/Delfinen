<html>
<head>
  <% include ./partials/head %>

  <style>
  #headline{
    text-align: center;
    margin-top: 20%;
    font-size: 40px
  }
  
  .center{
    text-align: center
  }
  </style>
</head>

<body>
  <div class="container">
      <div id="headline">Velkommen til Delfinen</div>
      <div class="center">Vælg Login</div>
      <div class="center">
        <h2 class="page-header">Account Login</h2>
        <form method="post" action="/">
          <div class="form-group">
            <label>Username</label>
            <input type="text" id="email" class="form-control" name="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" id="password" class="form-control" name="password" placeholder="Password">
          </div>
          <div class="form-group"></div>
            <label class="radio-inline"><input type="radio" id="type" name="radiobutton" checked value="Formand"> Formand </label>
            <label class="radio-inline"><input type="radio" id="type" name="radiobutton" value="Træner"> Træner </label>
          </div>
          <button id="submit_button" class="btn btn-default">Submit</button>
        </form>
      </div>
  </div>
</body>

</html>

<script>

  $("#submit_button").click(function(event){
    event.preventDefault();
    
  
    var object = {
      email: $('#email').val(),
      password: $('#password').val(),
      type: $('input[name="radiobutton"]:checked').val()
    }

    $.ajax({
     url: '/',
     dataType : 'json',
     type: 'post',
     data: object 
    })

  })

  
</script>